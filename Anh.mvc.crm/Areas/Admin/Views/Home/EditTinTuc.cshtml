
@{
    ViewBag.Title = "Cập nhật tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Module.BusinessLogic.Helper;


@section scripts {
    <script src="~/Assets/Js/bTinTucEdit.js"></script>
}

@Html.Hidden("NewsID", (int?)ViewBag.newsId)
@Html.Hidden("TypePage", (int)CommonHelper.TypePage.News)

<div class="row form-body-edit" id="forTinTucEdit" v-cloak>
    <div class="content-header  col-md-12">
        <div class="container-fluid">
            <div class="row ">
                <div class="col-md-9">
                    <h1 class="m-0 title-head">{{title}} tin tức</h1>
                </div><!-- /.col -->
                <div class="col-md-3">
                    <button type="button" class="btn  bg-gradient-primary btn-customCommon btn-save " v-on:click="save()">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <button type="button" class="btn  btn-default btn-custom btn-save " v-on:click="back()">
                        <i class="fas fa-undo"></i> Quay lại
                    </button>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <div class="col-12 ">
        <div class="card card-custom">
            <div class="card-body">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-9">
                                    <div class="col-md-12">
                                        <div class="form-group form-group-edit">
                                            <label>Tiêu đề <span style="color:Red">*</span></label>
                                            <div class="form-detail">
                                                <input type="text" v-model="modelEdit.TieuDe"
                                                       name="tieude" class="form-control" placeholder="Nhập tiêu đề" autocomplete="off"
                                                       v-bind:class="{ 'validate-error':  !modelEdit.TieuDe &&  submit }">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group form-group-edit">
                                            <label>Chuyên mục</label>
                                            <div class="form-detail">
                                                <select class="selectcareer single-select"
                                                        data-placeholder="Chọn chuyên mục" data-dropdown-css-class="select2-purple" style="width: 100%;">
                                                    <option v-for="(item, index) in listChuyenMuc" :value="item.Id"> {{item.DisplayName}}</option>
                                                </select>
                                                @*<v-select :options="listChuyenMuc" label="DisplayName" v-model="defaultSelected">

                                                    </v-select>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group form-group-edit">
                                            <label>Mô tả ngắn</label>
                                            <div class="form-detail">
                                                <textarea v-model="modelEdit.MoTa" name="mota" rows="7" class="form-control"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="col-md-12">
                                        <div class="form-group form-group-edit">

                                            <div class="my-custom-file">
                                                <input type="file" class="custom-file-input d-none" id="exampleInputFile">
                                                <label class="label-file-form" for="exampleInputFile" style="width: 100%; cursor: pointer ">
                                                    <i class="fas fa-image" style="font-size: 50px" v-if="!modelEdit.Anh"></i>
                                                    <img v-if="modelEdit.Anh" v-bind:src="modelEdit.Anh" class="img-thumbnail">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group form-group-edit">
                                <label>Nội dung</label>
                                <div class="form-detail">
                                    <textarea id="description" v-model="modelEdit.NoiDung" name="noidung"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            @*<div class="form-group">
                                    <div class="icheck-primary">

                                        <input type="checkbox" id="remember" v-model="modelEdit.IsViewHome">
                                        <label for="remember">
                                            Nổi bật trang chủ
                                        </label>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->


        </div>

        <!-- /.card -->
    </div>
</div>