@using Anh.mvc.crm.Helper;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Du học KIPA</title>
    <link rel="icon" href="/Assets/img/kipa-logo.png" type="image/x-icon">
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/theme")
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="javascript:void(0)" class="nav-link "> <span class="title-menu-top" style="color:var( --theme-color-main)"> WEBSITE QUẢN TRỊ DU HỌC KIPA</span></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <!-- Messages Dropdown Menu -->
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        @CurrentUser.GetCurrentUser() <i class="fas fa-angle-down"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="javascript:void(0)" onclick="showModalEditPassWord()" class="dropdown-item">
                            <i class="fas fa-sign-out"></i> Đổi mật khẩu
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/Admin/Account/LogOut" class="dropdown-item">
                            <i class="fas fa-sign-out"></i> Thoát
                        </a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                            <i class="fas fa-th-large"></i>
                        </a>
                    </li>*@
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 main-sidebardark-custom">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/Assets/img/kipa-logo.png" alt="0981143683" class="brand-image img-circle elevation-3" width="60" height="60">
                <h4 class="brand-text font-weight-light title-head-menu" style="color: var( --theme-color-main)"> DU HỌC KIPA </h4>
            </a>
            
            <!-- Sidebar -->
            <div class="sidebar sidebar-custom">
                <!-- Sidebar user panel (optional) -->
                <!-- Sidebar Menu -->
                @Html.Partial("_Sidebar")
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="form-body">
                        @RenderBody()
                        @Html.Partial("_Modal")
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @*<footer class="main-footer">
                <strong>Copyright &copy; Đỗ Tuấn - 0981143683.</strong>
                <div class="float-right d-none d-sm-inline-block">
                    <b>Copyright &copy; Đỗ Tuấn </b> 0981143683
                </div>
            </footer>*@

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/theme")
    <script src="~/Assets/plugins/jqconfirm/jquery-confirm.min.js"></script>
    <script src="//unpkg.com/vue-plain-pagination@0.2.1"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script src="https://unpkg.com/vue-select@2.4.0/dist/vue-select.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
